<h2>Start an Application</h2><br/><br/>

<%= form_with url: "/applications", method: :post, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br/><br/>

  <%= f.label :address %>
  <%= f.text_field :address %><br/><br/>

  <%= f.label :city %>
  <%= f.text_field :city %><br/><br/>

  <%= f.label :state %>
  <%= f.select :state, ['AL', 'AK', 'AS', 'AZ', 'AR', 'CA', 'CO', 'CT', 'DE', 'DC', 'FL', 'GA', 'GU', 'HI', 'ID', 'IL', 'IN
', 'IA', 'KS', 'KY', 'ME', 'MD', 'MA', 'MN', 'MS', 'MO', 'MT', 'NE', 'NV', 'NH', 'NJ', 'NM', 'NY', 'NC', 'ND', 'OH', 'OK', 'OR', 'PA', 'PR', 'RI', 'SC', 'SD', 'TN', 'TX', 'UT', 'VT', 'VA', 'VI', 'WA', 'WV', 'WI', 'WY'] %><br/><br/>

  <%= f.label :zip %>
  <%= f.number_field :zip %><br/><br/>

  <%= f.label :description %>
  <%= f.text_area :description %><br/><br/>

  <%= f.submit 'Submit' %>
<% end %>
